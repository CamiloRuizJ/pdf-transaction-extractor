{
  "name": "rexeli",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "gunicorn wsgi:app",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "V2_ENABLED": "true",
        "FLASK_ENV": "production",
        "DATABASE_URL": "sqlite:///rexeli.db",
        "REDIS_URL": "redis://redis:6379/0"
      }
    }
  }
}
